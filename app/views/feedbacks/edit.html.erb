<h2>Edit Feedback</h2>
<%= form_for [@commentable, @feedback], html: { style: "max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px;" } do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation" style="color: red; background-color: #f9d6d5; padding: 10px; border: 1px solid red; border-radius: 5px; margin-bottom: 20px;">
      <h2 style="margin: 0 0 10px 0;"><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul style="padding-left: 20px;">
        <% @feedback.errors.full_messages.each do |message| %>
          <li style="list-style-type: disc;"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :comment, style: "display: block; margin-bottom: 5px;" %>
    <%= f.text_area :comment, style: "width: 100%; height: 100px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>
  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :rating, style: "display: block; margin-bottom: 5px;" %>
    <%= f.number_field :rating, in: 1..10, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>
  <div class="actions" style="text-align: center;">
    <%= f.submit "Update Feedback", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>
<%= link_to 'Back', @commentable, style: "display: block; text-align: center; margin-top: 20px; color: #007BFF; text-decoration: none;" %>
