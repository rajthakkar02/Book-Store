<p style="color: green"><%= notice if current_user.seller? %></p>
<%= render @book %>
<% if current_user&.seller? %>
  <h2 style="font-weight: bold; color: #000;">Feedbacks</h2>
  <% if @book.feedbacks.any? %>
    <%= render partial: "feedbacks/feedback", collection: @book.feedbacks %>
  <% else %>
    <p style="color: #888;">No feedbacks yet.</p>
  <% end %>
<% end %>
<% if current_user.present? && !current_user.seller? %>
  <h2 style="font-weight: bold; color: #000;">Feedbacks</h2>
  <% if @book.feedbacks.any? %>
    <%= render partial: "feedbacks/feedback", collection: @book.feedbacks %>
  <% else %>
    <p style="color: #888;">No feedbacks yet.</p>
  <% end %>
  <h2 style="font-weight: bold; color: #000;">Leave a Feedback</h2>
  <%= render "feedbacks/form", commentable: @book, feedback: @feedback %>
<% end %>
<br>
<div>
  <%= link_to "Dashboard", root_path if !current_user&.seller? %>
  <%= link_to "Edit this book", edit_book_path(@book) if current_user&.seller? %>
  <%= link_to "Back to books", books_path if current_user&.seller? %>
  <%= button_to "Destroy this book", @book, method: :delete if current_user&.seller? %>
</div>
